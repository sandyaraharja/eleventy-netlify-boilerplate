---
layout: layouts/base.njk
section: post
---

	<!-- Foto pembatas -->
	<section class="page-top-section set-bg" data-setbg="{{ '/' | url }}_includes/assets/img/page-top-bg/4.jpg">
	<div class="page-info">
		<h2>{{ title }}</h2>
		<div class="site-breadcrumb">
			<a href="">{{ title }}</a>  /
			<span>{{ title }}</span>
		</div>
	</div>
	</section>
	<!-- foto pembatas -->

{% include "components/pembatas.njk"%}  

<article>
  <h1>{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by {{ metadata.author.name }}
    </small>
  </p>

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/blog/' | url }}">‚Üê Blog index</a>
</nav>
